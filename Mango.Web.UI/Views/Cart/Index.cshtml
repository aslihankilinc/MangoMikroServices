@model CartDto

<form method="post" asp-action="SendEmail">
    <br />
    <input asp-for="CartHeader.UserId" hidden />
    <input asp-for="CartHeader.CartHeaderId" hidden />
    <div>
        <div class="card-text border m-t4 container">
            <div class="card-header bg-dark text-light ml-0 row">
                <div class="col-6">
                    <h3 class="text-success">
                        <i class="bi bi-cart">
                            Sepet
                        </i>
                    </h3>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning mt-2 btn-sm">Alışverişe Devam</a>
                </div>
            </div>
            <div class="card-body">
                <div class=" d-none d-lg-block">
                    <div class="row text-info">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-5">
                            Ürün
                        </div>
                        <div class="col-lg-2">
                            Fiyat
                        </div>
                        <div class="col-lg-2">
                            Adet
                        </div>
                        <div class="col-lg-1">
                        </div>
                    </div>
                </div>
                <hr />
        </div>

            @foreach (var cartObj in Model.CartDetails)
            {
                <div class="row h-100">
                    <div class="col-4 col-md-2 text-center py-2">
                        <img src="@cartObj.Product.ImageUrl" class="rounded" width="100%" />
                    </div>
                    <div class="col-8 col-md-5">
                        <h5>@cartObj.Product.Name</h5>
                        <div style="font-size:11px;">@Html.Raw(cartObj.Product.Description)</div>
                    </div>
                    <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                        <span style="font-size:17px;">@string.Format("{0:c}", cartObj.Product.Price) </span>
                    </div>
                    <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                        <span style="font-size:17px;"> @cartObj.Count</span>
                    </div>
                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">

                        @*  <a href="/Cart/Remove?cartDetailsId=@cartObj.CartDetailsId" class="btn btn-sm btn-danger">Sil</a> *@
                        <a asp-action="Remove" asp-route-cartDetailsId="@cartObj.CartDetailsId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
            }


            <hr />
            <div class="row">
                <div class="col-6">
                    <span>Kupon:</span>
                    <input asp-for="CartHeader.CouponCode" />
                    <button type="submit" class="btn btn-sm btn-success" asp-action="ApplyCoupon"> Uygula </button>
                </div>
                <div class="col-6 text-end">
                    <span class="text-danger" style="font-size:21px;">  Toplam Tutar :  @string.Format("{0:c}", Model.CartHeader.CartTotal)  <br /></span>
                    <span class="text-success"> Toplam İndirim :   @string.Format("{0:c}", Model.CartHeader.Discount)  </span>
                </div>
            </div>
        </div>
        <div class="card-footer row">
            <div class="col-6 col-md-3 ">
                <button type="submit" class="btn btn-outline-danger form-control">Mail Gönder</button>
            </div>
            <div class="col-6 col-md-3 offset-md-6">
                <button disabled class="btn btn-success form-control " value="Onayla" />
            </div>
        </div>
    </div>
    </div>
</form>
