@using Mango.Web.UI.Models.Dto.Coupon
@model CouponDto

<form asp-action="CouponDeleted">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Kupon Sil</h1>
        <input asp-for="CouponId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Kupon Kodu</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">İndirim Miktarı</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Minimum Sepet Tutarı</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Geri Dön</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Deleted" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>