@model LoginRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Kullanıcı Girişi</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adınız" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <input asp-for="Password" class="form-control" placeholder="Şifreniz..." />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="col-12 col-md-6 offset-md-3 pb-2">
            <button type="submit" class="form-control btn btn-success" value="Submit">Giriş</button>
        </div>
    
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}